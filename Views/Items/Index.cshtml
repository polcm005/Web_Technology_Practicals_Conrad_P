@model IEnumerable<AOWebApp2.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Shop Items</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form class="mb-3 row justify-content-center" method="post" asp-controller="Items" asp-action="Index">
    <div class="col-sm-6">
        <input class="form-control" id="ItemSearch" placeholder="Enter item to search here..." maxlength="100" name="searchText" title="Search by item name. Max 100 Characters." value="@ViewBag.searchText" type="text">
    </div>

    <div class="col-sm-4">
        <select class="form-select" name="categoryId" title="View items for a specific category" asp-items="@ViewBag.CategoryList">
            <option selected>All Categories...</option>
        </select>
    </div>
    <div class="col-sm-2">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="Create" class="btn btn-outline-danger">Create new</a>
    </div>
</form>


@if (ViewBag.Quantity == 0)
{
    <p>No items found</p>
}
else
{
    <p>Results: @ViewBag.Quantity</p>
}



<div class="container">
    <div class="row row-cols-4">
        @foreach (var item in Model) {
            <div class="col">
                <div class="card">
                    <img src=@Html.DisplayFor(modelItem => item.ItemImage) class="card-img-top" alt="..." />
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.ItemName)</h5>
                        <p class="card-text">Category: @Html.DisplayFor(modelItem => item.Category.CategoryName)</p>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.ItemDescription)</p>
                        <p class="card-text">Cost: $@Html.DisplayFor(modelItem => item.ItemCost)</p>
                        <a asp-action="Details" asp-route-id="@item.ItemId" class="btn btn-primary">View Item Details</a>
                    </div>
                </div>
        </div>
        }
    </div>
</div>

